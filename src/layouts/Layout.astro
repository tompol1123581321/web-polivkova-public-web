---
import background from "../assets/background.svg";
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
import "../styles/global.css";
---

<!doctype html>
<html lang="cs">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/ico" href="/accounting.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>Účetnictví Ing. Jana Polívková</title>

    <!-- Metas -->
    <meta
      name="description"
      content="Profesionální účetnictví a daňové poradenství od Ing. Jany Polívkové. Zajišťujeme precizní správu financí pro malé i střední firmy s individuálním přístupem."
    />
  </head>
  <body class="dark:bg-gray-950">
    <img
      class="fixed top-0 left-0 size-full -z-10 blur-2xl"
      src={background.src}
      alt=""
      fetchpriority="high"
    />
    <Navbar />
    <main class="max-w-screen-lg mx-auto p-6 flex flex-col gap-12">
      <slot />
    </main>
    <Footer />
  </body>
  <style is:global>
    * {
      scroll-behavior: smooth;
    }
  </style>
</html>
